<div id="rate_<%= book.id %>" class="form-group"></div>
<script>
  $('#rate_<%= book.id%>').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    half      : false,
    readOnly: true,
    score: <%= book.evaluation %>,
  });
</script>